{
  "tasks": {
    "dev": "deno run --allow-read --allow-env --watch main.ts",
    "test": "deno test --allow-read --allow-env --parallel ./src/tests/*.test.ts",
    "test-debug": "deno test --allow-read --allow-env --inspect-brk ./src/tests/*.test.ts"
  },
  "imports": {
    "@composables": "./src/composables/index.ts",
    "@constants": "./src/constants/index.ts",
    "@controllers": "./src/controllers/index.ts",
    "@services": "./src/services/index.ts",
    "@std/assert": "jsr:@std/assert@1",
    "@typeguard": "./src/utils/typeguard/index.ts",
    "@types": "./src/types/index.ts",
    "@utils": "./src/utils/index.ts"
  },
  "lint": {
    "files": ["src/**/*.ts", "src/**/*.tsx"],
    "rules": {
      "ban-ts-comment": "warn", 
      "no-explicit-any": "warn", 
      "no-throw-literal": "error",
      "no-unreachable": "error",
      "no-unused-vars": "warn", 
      "prefer-const": "warn" 
    }
  }
}
